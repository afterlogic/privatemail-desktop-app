{
  "name": "privatemail-desktop",
  "version": "0.0.1",
  "description": "Collaboration multiplatform desktop app",
  "productName": "privatemail-desktop",
  "cordovaId": "org.cordova.quasar.app",
  "author": "Afterlogic Dev Team <support@afterlogic.com>",
  "private": true,
  "main": "src-electron/main-process/electron-main.js",
  "scripts": {
    "lint": "eslint --ext .js,.vue src",
    "test": "echo \"No test specified\" && exit 0",
    "dev:web": "quasar dev",
    "dev:app": "quasar dev -m electron",
    "postinstall": "electron-builder install-app-deps",
    "build:web": "quasar build",
    "build:app": "quasar build -m electron",
    "build:pwa": "quasar build -m pwa",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "scripts comments": "postinstall should be run right after npm install (because of sqlite3)",
  "build": {
    "appId": "com.afterlogic.privatemail",
    "productName": "Private Mail",
    "mac": {
      "category": "public.app-category.social-networking"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@quasar/extras": "^1.3.2",
    "axios": "^0.18.1",
    "electron": "6.0.11",
    "electron-rebuild": "^1.8.6",
    "file-saver": "^2.0.2",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "openpgp": "4.5.2",
    "quasar": "^1.1.6",
    "sqlite3": "^4.1.0",
    "vue-i18n": "^8.14.1",
    "vuex-persistedstate": "^2.5.4"
  },
  "devDependencies": {
    "@quasar/app": "^1.1.2",
    "@vue/eslint-config-prettier": "^4.0.0",
    "babel-eslint": "^10.0.3",
    "devtron": "^1.4.0",
    "electron-builder": "^20.28.4",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^13.1.1",
    "eslint": "^5.10.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.3.1"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0",
    "yarn": ">= 1.6.0"
  },
  "browserslist": [
    "last 1 version, not dead, ie >= 11"
  ]
}
